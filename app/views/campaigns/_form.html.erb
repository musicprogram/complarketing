<%= form_for @campaign, :html => { :class => "form-horizontal campaign" } do |f| %>

    <% if @campaign.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :campaignName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :campaignName, :class => 'form-control' %>
    </div>
    <%= error_span(@campaign[:campaignName]) %>
  </div>
  <div class="control-group">
    <%= f.label :campaignCode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :campaignCode, :class => 'form-control' %>
    </div>
    <%= error_span(@campaign[:campaignCode]) %>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%= error_span(@campaign[:status]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            campaigns_path, :class => 'btn btn-default' %>

<% end %>
