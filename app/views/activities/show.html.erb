<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nameActivity) %>:</strong></dt>
  <dd><%= @activity.nameActivity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:typeActivity) %>:</strong></dt>
  <dd><%= @activity.typeActivity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @activity.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dateActivity) %>:</strong></dt>
  <dd><%= @activity.dateActivity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endDateActivity) %>:</strong></dt>
  <dd><%= @activity.endDateActivity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:totalTimeActivity) %>:</strong></dt>
  <dd><%= @activity.totalTimeActivity %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              activities_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_activity_path(@activity), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              activity_path(@activity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
