<%= form_for @activity, :html => { :class => "form-horizontal activity" } do |f| %>

    <% if @activity.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @activity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nameActivity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nameActivity, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:nameActivity]) %>
  </div>
  <div class="control-group">
    <%= f.label :typeActivity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :typeActivity, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:typeActivity]) %>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:note]) %>
  </div>
  <div class="control-group">
    <%= f.label :dateActivity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dateActivity, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:dateActivity]) %>
  </div>
  <div class="control-group">
    <%= f.label :endDateActivity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :endDateActivity, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:endDateActivity]) %>
  </div>
  <div class="control-group">
    <%= f.label :totalTimeActivity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :totalTimeActivity, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:totalTimeActivity]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            activities_path, :class => 'btn btn-default' %>

<% end %>
